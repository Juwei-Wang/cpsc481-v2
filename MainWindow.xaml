<Window x:Class="cpsc481.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cpsc481"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,682,0">
        <StackPanel Background="#FFEE52F5">
            <Image Height="122" Width="118" Source="/icon-main.png"/>
            <Button x:Name="button1" Content="Favorites" Height="40" Background="#FFEE52F5" Click="button1_Click"/>
            <Button x:Name="button2" Content="My Recipes" Height="40" Background="#FFEE52F5" Click="button2_Click"/>
            <Button x:Name="button3" Content="My Account" Height="40" Background="#FFEE52F5" Click="button3_Click"/>
            <Button x:Name="button5" Content="User Guide" Height="40" Background="#FFEE52F5" Click="button5_Click"/>
            <Button x:Name="button4" Content="Seeting" Height="40" Background="#FFEE52F5" Click="button4_Click"/>
        </StackPanel>
        <DockPanel LastChildFill="False" Margin="123,0,-680,366">
            <Button Content="Button" Width="Auto"/>
            <Button Content="Button" Width="Auto"/>
        </DockPanel>

    </Grid>
</Window>
